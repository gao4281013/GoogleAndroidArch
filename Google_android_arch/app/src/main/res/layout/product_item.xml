<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable
        name="product"
        type="com.example.administrator.google_android_arch.archDemo.model.Product"/>
    <variable
        name="callback"
        type="com.example.administrator.google_android_arch.archDemo.UI.ProductClickCallback"/>
  </data>
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="100dp"
      android:onClick="@{() -> callback.onclick(product)}"
      android:orientation="horizontal"
      android:layout_marginStart="@dimen/dp8"
      android:layout_marginEnd="@dimen/dp8"
      app:cardUseCompatPadding="true"
      >

    <RelativeLayout
        android:layout_marginStart="@dimen/dp8"
        android:layout_marginEnd="@dimen/dp8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TextView
          android:contentDescription="@string/name_of_product"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/name"
          android:text="@{product.name}"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="5dp"
          android:text="@{@string/product_price(product.price)}"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/name"
          android:text="@{product.description}"
          />
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</layout>